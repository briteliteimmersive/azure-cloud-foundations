      "metadata": {
        "version": "1.0.0",
        "category": "Network"
      },
      "parameters": {
        "az-024-monitor-Storage-sa-require-private-endpoint": {
          "type": "string",
          "metadata": {
            "displayName": "az-024-monitor-Storage-sa-require-private-endpoint",
            "strongType": "Microsoft.Network/privateDnsZones",
