{
    "name": "az-090-enforce-managed-instance-sql-aad-admin",
    "type": "Microsoft.Authorization/policyDefinitions",
    "apiVersion": "2021-06-01",
    "scope": null,
    "properties": {
      "policyType": "Custom",
      "mode": "All",
      "displayName": "az-090-enforce-managed-instance-sql-aad-admin",
      "description": "(az-090):Enforce Azure SQL Managed Instance resources use of Azure AD Administratorsenforce-managed-instance-sql-aad-admin",
      "metadata": {
        "version": "1.0.0",
        "category": "Sql"
      },
      "parameters": {
        "effect": {
          "allowedValues": [
            "Audit",
            "AuditIfNotExists",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Audit",
          "metadata": {
            "description": "The effect for this policy. Audit or Deny",
            "displayName": "Effect"
          },
          "type": "String"
        }
      },
      "policyRule": {
        "if": {
          "equals": "Microsoft.Sql/managedInstances",
          "field": "type"
        },
        "then": {
          "details": {
            "existenceCondition": {
              "allOf": [
                {
                  "equals": "ActiveDirectory",
                  "field": "Microsoft.Sql/managedInstances/administrators/administratorType"
                }
              ]
            },
            "type": "Microsoft.Sql/managedInstances/administrators"
          },
          "effect": "[parameters('effect')]"
        }
      }
    }
  }